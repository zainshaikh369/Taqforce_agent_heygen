cat > .gitignore << 'EOF'
# OS / IDE
.DS_Store
**/.DS_Store
.vscode/
.idea/
*.code-workspace

# Environment / Secrets
.env
.env.*
*.env
**/.env
**/.env.*
backend/.env
frontend/.env
.envrc

# Node / Vite
node_modules/
**/node_modules/
frontend/.vite/
frontend/.eslintcache

# Build artifacts
dist/
build/
**/dist/
**/build/

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*

# Python
.venv/
venv/
backend/.venv/
**/__pycache__/
backend/__pycache__/
**/*.py[cod]
backend/.pytest_cache/
**/.pytest_cache/
backend/.mypy_cache/
**/.mypy_cache/

# Misc
coverage/
EOF
